{% assign title_text = metadata.title %}
{% if title %}
  {% assign title_text = title | append: ' | ' | append: title_text %}
{% endif %}
{% assign description_text = metadata.description %}
{% if description %}
  {% assign description_text = description %}
{% endif %}
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{{ title_text }}</title>
<meta name="description" content="{{ description_text }}">
<meta name="format-detection" content="telephone=no">
{% if eleventyExcludeFromCollections %}
  <meta name="robots" content="noindex">
{% endif %}
<link
  rel="icon"
  type="image/png"
  sizes="32x32"
  href="/favicon-32x32.png">
<link
  rel="icon"
  type="image/png"
  sizes="16x16"
  href="/favicon-16x16.png">
<link
  rel="apple-touch-icon"
  href="/apple-touch-icon.png"
  sizes="180x180">
<link
  rel="mask-icon"
  href="/favicon.svg"
  color="{{ metadata.backgroundColor }}">
<meta name="theme-color" content="{{ metadata.themeColor }}">
<!-- OGP Settings -->
<meta property="og:title" content="{{ title_text }}">
<meta property="og:type" content="{{ metadata.ogType }}">
<meta property="og:image" content="{{ metadata.url }}/{{ metadata.ogpImage }}">
<meta property="og:url" content="{{ metadata.url }}/{{ pagePath }}">
<meta property="og:description" content="{{ description_text }}">
<meta property="og:site_name" content="{{ metadata.siteName }}">
<meta property="og:locale" content="{{ metadata.language }}">
<meta name="twitter:card" content="{{ metadata.twitterCard }}">
<meta name="twitter:site" content="{{ metadata.twitterSite }}">
<!--// OGP Settings -->
<link rel="stylesheet" href="/assets/css/style.css">
<script src="/assets/js/main.js" defer></script>
<script>
  document.documentElement.classList.remove('no-js')
</script>
