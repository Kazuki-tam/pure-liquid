{
  "name": "pure-liquid",
  "version": "0.2.1",
  "description": "Starter kit with Liquid for static website.",
  "author": "Kazuki Yonemoto (https://dev.to/tim_yone)",
  "homepage": "https://github.com/Kazuki-tam/pure-liquid#readme",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist",
    "serve": "NODE_ENV=production eleventy --serve --config .config/.eleventy.js",
    "start": "npm-run-all -p 'start:*'",
    "start:htmlandstyle": "npm-run-all -p liquid:watch css:watch",
    "start:rspack": "npm-run-all rspack:watch",
    "start:imagemin": "onchange 'src/assets/img/' -- npm-run-all imagemin",
    "start:copy": "cpx './src/!(_data)/**/*.{css,js,pdf}' './dist' --watch",
    "build": "npm-run-all clean -p 'build:*' copy copy:public imagemin svgsprite",
    "build:htmlandstyle": "NODE_ENV=development npm-run-all liquid sass:dev postCss",
    "build:rspack": "npm-run-all checkTypes rspack:dev",
    "release": "npm-run-all clean -p 'release:*' copy copy:public imagemin svgsprite",
    "release:sass": "NODE_ENV=production npm-run-all sass:prd postCss",
    "release:htmlandstyle": "NODE_ENV=production npm-run-all liquid sass:prd postCss",
    "release:rspack": "npm-run-all checkTypes rspack:prd",
    "liquid": "eleventy --config .config/.eleventy.js",
    "liquid:watch": "eleventy --serve --incremental --config .config/.eleventy.js",
    "lint": "npm-run-all -p eslint stylelint checkTypes htmlValidate",
    "lint:fix": "npm-run-all eslint:fix stylelint:fix format",
    "copy": "cpx './src/!(_data)/**/*.{css,js,pdf}' './dist'",
    "copy:public": "cpx './src/public/**/*' './dist'",
    "imagemin": "node .config/imagemin.mjs",
    "svgsprite": "svg-sprite -C .config/svgconfig.json â€”shape-transform-svgo .config/svgo.json src/assets/icon/*svg",
    "rspack:dev": "cross-env NODE_ENV=development rspack build -c .config/rspack.config.js",
    "rspack:prd": "cross-env NODE_ENV=production rspack build -c .config/rspack.config.js",
    "rspack:watch": "cross-env NODE_ENV=development rspack -c .config/rspack.config.js --watch",
    "css:watch": "npm-run-all -s sass:watch postCss:watch",
    "sass:watch": "sass ./src/assets/scss:dist/assets/css/ --watch",
    "sass:dev": "sass ./src/assets/scss:dist/assets/css/ --no-unicode",
    "sass:prd": "sass ./src/assets/scss:dist/assets/css/ --no-source-map --no-unicode",
    "htmlValidate": "html-validate 'dist/**/*.html' --config .config/.htmlvalidate.json",
    "stylelint": "stylelint 'src/**/*.{css,scss}' --config .config/.stylelintrc.json",
    "stylelint:fix": "stylelint 'src/**/*.{css,scss}' --fix --config .config/.stylelintrc.json",
    "eslint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --config .config/.eslintrc.json",
    "eslint:fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}' --config .config/.eslintrc.json",
    "checkTypes": "tsc --noEmit --skipLibCheck",
    "e2e": "playwright test --config .config/playwright.config.ts",
    "e2e:headed": "playwright test --headed --config .config/playwright.config.ts",
    "e2e:install": "playwright install",
    "e2e:codegen": "playwright codegen --config .config/playwright.config.ts",
    "e2e:report": "playwright show-report .config/my-report",
    "unit": "jest --config .config/jest.config.ts",
    "unit:watch": "jest --watch --config .config/jest.config.ts",
    "format": "prettier --write 'src/**/*.{js,ts,tsx}' --config .config/.prettierrc",
    "postCss": "postcss ./dist/**/*.css --replace ./dist/**/*.css --config .config/.postcssrc.js",
    "postCss:watch": "postcss ./dist/**/*.css --base ./dist/ --dir ./dist/ --watch --config .config/.postcssrc.js",
    "postInstall": "typesync",
    "checkLicense": "license-checker --production"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-fetch": "^4.0.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@playwright/test": "^1.37.0",
    "@rspack/cli": "^0.2.11",
    "@types/cpx": "^1.5.2",
    "@types/eslint": "^8.44.2",
    "@types/html-minifier": "^4.0.2",
    "@types/imagemin": "^8.0.1",
    "@types/imagemin-gifsicle": "^7.0.1",
    "@types/imagemin-jpegtran": "^5.0.1",
    "@types/imagemin-mozjpeg": "^8.0.1",
    "@types/imagemin-pngquant": "8.0.0",
    "@types/imagemin-svgo": "10.0.2",
    "@types/imagemin-webp": "7.0.0",
    "@types/jest": "^29.5.3",
    "@types/license-checker": "^25.0.3",
    "@types/prettier": "^3.0.0",
    "@types/svg-sprite": "^0.0.34",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "autoprefixer": "^10.4.14",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.47.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-playwright": "^0.15.3",
    "html-minifier": "^4.0.0",
    "html-validate": "^8.2.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "9.0.2",
    "imagemin-svgo": "10.0.1",
    "imagemin-webp": "^8.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "license-checker": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-plugin": "^1.0.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "sass": "^1.65.1",
    "stylelint": "^15.10.2",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "svg-sprite": "^2.0.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "typesync": "^0.11.1"
  },
  "engines": {
    "node": ">=16"
  }
}
